<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="fxWelcomeScene" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="controller.MainActivity">
   <children>
      <VBox prefHeight="640.0" prefWidth="600.0">
         <children>
             <Label alignment="CENTER" onInputMethodTextChanged="#greetUser" prefHeight="57.0" prefWidth="624.0"
                    text="Welcome to Top Quizz" textAlignment="CENTER">
               <font>
                  <Font name="Century" size="38.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
             <Label fx:id="mGreetingText" alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="57.0"
                    prefWidth="624.0" textAlignment="CENTER">
               <font>
                   <Font name="Century" size="38.0"/>
               </font>
               <padding>
                   <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
            </Label>
             <TextField fx:id="mNameInput" alignment="CENTER" onInputMethodTextChanged="#greetUser" prefHeight="37.0"
                        prefWidth="593.0" promptText="Enter your name">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="100.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
             <Button fx:id="mPlayButton" alignment="CENTER" mnemonicParsing="false" onAction="#onMouseclicked"
                     onMouseClicked="#onMouseclicked" prefHeight="60.0" prefWidth="60.0" text="Play !">
               <VBox.margin>
                  <Insets bottom="10.0" left="270.0" right="270.0" top="100.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
